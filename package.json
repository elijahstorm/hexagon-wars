{
	"name": "hexagon-wars",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:fire": "firebase emulators:start",
		"start": "node build/index.js",
		"package": "svelte-kit package",
		"build": "vite build",
		"preview": "vite preview",
		"test": "cypress run",
		"predeploy": "pnpm i --frozen-lockfile && pnpm build && pnpm test",
		"deploy": "firebase deploy --only hosting:hexagon-wars",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@cypress/vite-dev-server": "^3.1.1",
		"@iconify/svelte": "^3.0.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-static": "1.0.0-next.43",
		"@sveltejs/kit": "next",
		"@sveltejs/vite-plugin-svelte": "^1.0.5",
		"@testing-library/cypress": "^8.0.3",
		"@tsconfig/svelte": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^5.37.0",
		"@typescript-eslint/parser": "^5.37.0",
		"cypress": "^10.8.0",
		"eslint": "^8.23.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"just-throttle": "^4.1.1",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.50.1",
		"svelte-adapter-firebase": "^0.14.4",
		"svelte-calendar": "^3.1.6",
		"svelte-check": "^2.9.0",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
		"typescript": "^4.8.3",
		"vite": "^3.1.0"
	},
	"dependencies": {
		"firebase": "^9.9.4",
		"svelte-fa": "^3.0.3"
	}
}
